<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/fior" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="Fior di Zucca Cucina d'Italia"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/btnsaiba1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="telasaiba1"
                android:text="Saiba Mais" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/duo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="DUO BistrÃ´"
                android:textAlignment="center"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnsaiba2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="telasaiba2"
                android:text="Saiba Mais" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="419dp"
                app:srcCompat="@mipmap/unnamed" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="La Doc Gastronomia"
                android:textAlignment="center"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/bntsaiba3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="telasaiba3"
                android:text="Saiba Mais" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>